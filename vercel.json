{
  "version": 2,
  "builds": [
    {
      "src": "frontend/public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/static/(.*)", "destination": "/frontend/public/static/$1" },
    { "source": "/config.js", "destination": "/frontend/public/config.js" },
    { "source": "/(.*)\\.html", "destination": "/frontend/public/$1.html" },
    { "source": "/", "destination": "/frontend/public/login.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://case-detector.onrender.com"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization, X-CSRFToken"
        }
      ]
    }
  ]
}
